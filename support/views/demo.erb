var chloe = new Chloe({host: "<%= server_name %>", port: 8901});

chloe.onmessage(function (message) {
  alert('I got a message too: ' + message);
});

chloe.onclose(function () {
  alert("And... we're closed.");
});

chloe.connect(function () {
  alert('Holy crap, connected!');
  chloe.send('Ohai Chloe!');

  chloe.subscribe('pumpkin', function (message) {
    alert('Someone was eating pumpkins: ' + message);
  });
});

